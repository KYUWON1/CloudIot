<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sleep Data</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Sleep Tracker</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/api/getStoredData">수면 기록보기</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/api/getRemData">렘 수면 기록보기</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/timeinfo">알람 정보 보기</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">알람 시간 입력하기</a>
                </li>
            </ul>
        </div>
    </nav>
    <h1>Sleep Data</h1>
    <div>
        <h2>Device Information</h2>
        <p>Device ID: <%= sleepData.deviceId %></p>
    </div>
    <div>
        <h2>Sleep Details</h2>
        <p>Date of Sleep: <%= sleepData.sleepDate %></p>
        <p>Total Time in Bed: <%= sleepData.asleepTotal %> minutes</p>
        <p>Minutes Asleep: <%= sleepData.asleepMin %> minutes</p>
        <p>Minutes Awake: <%= sleepData.awakeMin %> minutes</p>
    </div>
    <div>
        <h2>Sleep Summary</h2>
        <% for (const [level, details] of Object.entries(sleepData.sleepSummary)) { %>
            <h3><%= level %> Levels</h3>
            <p>Count: <%= details.count %></p>
            <p>Minutes: <%= details.minutes %></p>
        <% } %>
    </div>
    <div>
        <h2>Detailed Sleep State</h2>
        <% sleepData.sleepState.forEach((state, index) => { %>
            <div>
                <h3>State #<%= index + 1 %></h3>
                <p>Date Time: <%= state.dateTime %></p>
                <p>Level: <%= state.level %></p>
                <p>Seconds: <%= state.seconds %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
